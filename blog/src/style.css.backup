/* CSS Custom Properties Definitions - MIDSPIRAL Theme */

:root {
  --maxWidth-none: "none";
  --maxWidth-xs: 20rem;
  --maxWidth-sm: 24rem;
  --maxWidth-md: 28rem;
  --maxWidth-lg: 32rem;
  --maxWidth-xl: 36rem;
  --maxWidth-2xl: 42rem;
  --maxWidth-3xl: 48rem;
  --maxWidth-4xl: 56rem;
  --maxWidth-full: "100%";
  --maxWidth-wrapper: var(--maxWidth-2xl);
  --spacing-px: "1px";
  --spacing-0: 0;
  --spacing-1: 0.25rem;
  --spacing-2: 0.5rem;
  --spacing-3: 0.75rem;
  --spacing-4: 1rem;
  --spacing-5: 1.25rem;
  --spacing-6: 1.5rem;
  --spacing-8: 2rem;
  --spacing-10: 2.5rem;
  --spacing-12: 3rem;
  --spacing-16: 4rem;
  --spacing-20: 5rem;
  --spacing-24: 6rem;
  --spacing-32: 8rem;
  
  /* MIDSPIRAL Colors - matching main site */
  --bg-color: #0a0a0a;
  --text-color: rgba(255, 255, 255, 0.9);
  --accent-color: #646cff;
  --secondary-color: #4ab0eb;
  --text-light: rgba(255, 255, 255, 0.6);
  --border-color: rgba(255, 255, 255, 0.1);
  
  /* Typography - matching main site (Montserrat) */
  --fontFamily-sans: "Montserrat", system-ui, -apple-system,
    BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans",
    sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol",
    "Noto Color Emoji";
  --fontFamily-serif: "Montserrat", "Georgia", Cambria, "Times New Roman",
    Times, serif;
  --font-body: var(--fontFamily-sans);
  --font-heading: var(--fontFamily-sans);
  --fontWeight-light: 200;
  --fontWeight-normal: 300;
  --fontWeight-medium: 400;
  --fontWeight-bold: 600;
  --fontWeight-black: 700;
  --fontSize-root: 16px;
  --lineHeight-none: 1;
  --lineHeight-tight: 1.1;
  --lineHeight-normal: 1.5;
  --lineHeight-relaxed: 1.625;
  /* 1.200 Minor Third Type Scale */
  --fontSize-0: 0.833rem;
  --fontSize-1: 1rem;
  --fontSize-2: 1.2rem;
  --fontSize-3: 1.44rem;
  --fontSize-4: 1.728rem;
  --fontSize-5: 2.074rem;
  --fontSize-6: 2.488rem;
  --fontSize-7: 2.986rem;
  
  /* Legacy color mappings for compatibility */
  --color-primary: var(--secondary-color);
  --color-text: var(--text-color);
  --color-text-light: var(--text-light);
  --color-heading: var(--text-color);
  --color-heading-black: var(--text-color);
  --color-accent: var(--border-color);
}

/* HTML elements */

*,
:after,
:before {
  box-sizing: border-box;
}

html {
  line-height: var(--lineHeight-normal);
  font-size: var(--fontSize-root);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

body {
  font-family: var(--font-body);
  font-size: var(--fontSize-1);
  color: var(--text-color);
  background-color: var(--bg-color);
  font-weight: var(--fontWeight-normal);
  line-height: 1.6;
  overflow-x: hidden;
  scroll-behavior: smooth;
}

footer {
  padding: var(--spacing-6) var(--spacing-0);
  color: var(--text-light);
  font-weight: var(--fontWeight-light);
  text-align: center;
  opacity: 0.8;
}

hr {
  background: var(--color-accent);
  height: 1px;
  border: 0;
}

/* Heading */

h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: var(--font-heading);
  margin-top: var(--spacing-12);
  margin-bottom: var(--spacing-6);
  line-height: var(--lineHeight-tight);
  letter-spacing: 0.5px;
  color: var(--text-color);
}

h2,
h3,
h4,
h5,
h6 {
  font-weight: var(--fontWeight-normal);
}

h1 {
  font-weight: var(--fontWeight-light);
  font-size: var(--fontSize-6);
  letter-spacing: 1px;
}

h2 {
  font-size: var(--fontSize-5);
}

h3 {
  font-size: var(--fontSize-4);
}

h4 {
  font-size: var(--fontSize-3);
}

h5 {
  font-size: var(--fontSize-2);
}

h6 {
  font-size: var(--fontSize-1);
}

h1 > a {
  color: inherit;
  text-decoration: none;
}

h2 > a,
h3 > a,
h4 > a,
h5 > a,
h6 > a {
  text-decoration: none;
  color: inherit;
}

/* Prose */

p {
  line-height: var(--lineHeight-relaxed);
  --baseline-multiplier: 0.179;
  --x-height-multiplier: 0.35;
  margin: var(--spacing-0) var(--spacing-0) var(--spacing-8) var(--spacing-0);
  padding: var(--spacing-0);
}

ul,
ol {
  margin-left: var(--spacing-0);
  margin-right: var(--spacing-0);
  padding: var(--spacing-0);
  margin-bottom: var(--spacing-8);
  list-style-position: outside;
  list-style-image: none;
}

ul li,
ol li {
  padding-left: var(--spacing-0);
  margin-bottom: calc(var(--spacing-8) / 2);
}

li > p {
  margin-bottom: calc(var(--spacing-8) / 2);
}

li *:last-child {
  margin-bottom: var(--spacing-0);
}

li > ul {
  margin-left: var(--spacing-8);
  margin-top: calc(var(--spacing-8) / 2);
}

blockquote {
  color: var(--color-text-light);
  margin-left: calc(-1 * var(--spacing-6));
  margin-right: var(--spacing-8);
  padding: var(--spacing-0) var(--spacing-0) var(--spacing-0) var(--spacing-6);
  border-left: var(--spacing-1) solid var(--color-primary);
  font-size: var(--fontSize-2);
  font-style: italic;
  margin-bottom: var(--spacing-8);
}

blockquote > :last-child {
  margin-bottom: var(--spacing-0);
}

blockquote > ul,
blockquote > ol {
  list-style-position: inside;
}

table {
  width: 100%;
  margin-bottom: var(--spacing-8);
  border-collapse: collapse;
  border-spacing: 0.25rem;
}

table thead tr th {
  border-bottom: 1px solid var(--color-accent);
}

/* Link */

a {
  color: var(--secondary-color);
  text-decoration: none;
  transition: all 0.3s ease;
}

a:hover,
a:focus {
  color: var(--text-color);
  text-decoration: none;
}

/* Custom classes */

.global-wrapper {
  margin: var(--spacing-0) auto;
  max-width: var(--maxWidth-wrapper);
  padding: var(--spacing-10) var(--spacing-5);
}

.global-wrapper[data-is-root-path="true"] .bio {
  margin-bottom: var(--spacing-20);
}

.global-header {
  margin-bottom: var(--spacing-12);
}

.main-heading {
  font-size: var(--fontSize-7);
  margin: 0;
  font-weight: var(--fontWeight-light);
  letter-spacing: 2px;
  text-transform: uppercase;
  background: linear-gradient(to right, var(--text-color), var(--secondary-color));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.post-list-item {
  margin-bottom: var(--spacing-8);
  margin-top: var(--spacing-8);
}

.post-list-item p {
  margin-bottom: var(--spacing-0);
}

.post-list-item h2 {
  font-size: var(--fontSize-4);
  color: var(--color-primary);
  margin-bottom: var(--spacing-2);
  margin-top: var(--spacing-0);
}

.post-list-item header {
  margin-bottom: var(--spacing-4);
}

.header-link-home {
  font-weight: var(--fontWeight-light);
  font-family: var(--font-heading);
  text-decoration: none;
  font-size: var(--fontSize-2);
  letter-spacing: 2px;
  text-transform: uppercase;
  color: var(--secondary-color);
  transition: all 0.3s ease;
}

.header-link-home:hover {
  color: var(--text-color);
  transform: translateY(-1px);
}

.bio {
  display: flex;
  margin-bottom: var(--spacing-16);
}

.bio p {
  margin-bottom: var(--spacing-0);
}

.bio-avatar {
  margin-right: var(--spacing-4);
  margin-bottom: var(--spacing-0);
  min-width: 50px;
  border-radius: 100%;
}

.blog-post header h1 {
  margin: var(--spacing-0) var(--spacing-0) var(--spacing-4) var(--spacing-0);
}

.blog-post header p {
  font-size: var(--fontSize-2);
  font-family: var(--font-heading);
}

.blog-post-nav ul {
  margin: var(--spacing-0);
}

.gatsby-highlight {
  margin-bottom: var(--spacing-8);
}

/* Updates page styling - matching main site theme */

.updates-header {
  text-align: center;
  padding: var(--spacing-16) var(--spacing-0) var(--spacing-12) var(--spacing-0);
  border-bottom: 1px solid var(--border-color);
  margin-bottom: var(--spacing-16);
}

.updates-page-title {
  font-size: var(--fontSize-6);
  font-weight: var(--fontWeight-light);
  letter-spacing: 0.2em;
  margin: 0;
  color: var(--text-color);
  text-transform: uppercase;
  background: linear-gradient(to right, var(--text-color), var(--secondary-color));
  -webkit-background-clip: text;
  background-clip: text;
  -webkit-text-fill-color: transparent;
}

.updates-list {
  max-width: var(--maxWidth-2xl);
  margin: 0 auto;
}

.update-list-item {
  margin-bottom: var(--spacing-16);
  padding-bottom: var(--spacing-12);
  border-bottom: 1px solid var(--border-color);
  background: rgba(255, 255, 255, 0.02);
  border-radius: 8px;
  padding: var(--spacing-8);
  transition: all 0.3s ease;
}

.update-list-item:hover {
  background: rgba(255, 255, 255, 0.05);
  transform: translateY(-2px);
}

.update-list-item:last-child {
  border-bottom: none;
}

.update-item-header {
  margin-bottom: var(--spacing-6);
}

.update-item-title {
  font-size: var(--fontSize-4);
  font-weight: var(--fontWeight-normal);
  letter-spacing: 0.5px;
  margin: 0 0 var(--spacing-2) 0;
  line-height: var(--lineHeight-tight);
}

.update-item-title a {
  color: var(--text-color);
  text-decoration: none;
  transition: color 0.3s ease;
}

.update-item-title a:hover {
  color: var(--secondary-color);
}

.update-item-date {
  font-size: var(--fontSize-0);
  font-weight: var(--fontWeight-light);
  color: var(--text-light);
  letter-spacing: 0.05em;
  text-transform: uppercase;
  opacity: 0.7;
}

.update-item-content {
  font-weight: var(--fontWeight-normal);
  line-height: var(--lineHeight-relaxed);
  color: var(--text-color);
  opacity: 0.8;
}

.update-item-content p {
  margin: 0;
  font-size: var(--fontSize-1);
}

/* Individual update post styling */

.update-post {
  max-width: var(--maxWidth-2xl);
  margin: 0 auto;
}

.update-post-header {
  text-align: center;
  padding: var(--spacing-16) var(--spacing-0) var(--spacing-12) var(--spacing-0);
  border-bottom: 1px solid var(--border-color);
  margin-bottom: var(--spacing-16);
}

.update-post-title {
  font-size: var(--fontSize-6);
  font-weight: var(--fontWeight-normal);
  letter-spacing: 0.5px;
  margin: 0 0 var(--spacing-4) 0;
  color: var(--text-color);
  line-height: var(--lineHeight-tight);
}

.update-post-date {
  font-size: var(--fontSize-1);
  font-weight: var(--fontWeight-light);
  color: var(--text-light);
  letter-spacing: 0.05em;
  text-transform: uppercase;
  opacity: 0.7;
}

.update-post-content {
  font-weight: var(--fontWeight-normal);
  line-height: var(--lineHeight-relaxed);
  color: var(--text-color);
  margin-bottom: var(--spacing-16);
}

.update-post-content h2 {
  font-size: var(--fontSize-4);
  font-weight: var(--fontWeight-normal);
  margin-top: var(--spacing-16);
  margin-bottom: var(--spacing-8);
  color: var(--text-color);
}

.update-post-content h3 {
  font-size: var(--fontSize-3);
  font-weight: var(--fontWeight-normal);
  margin-top: var(--spacing-12);
  margin-bottom: var(--spacing-6);
  color: var(--text-color);
}

.update-post-content p {
  margin-bottom: var(--spacing-8);
  font-size: var(--fontSize-1);
  opacity: 0.9;
}

.update-post-content a {
  color: var(--secondary-color);
  text-decoration: none;
  border-bottom: 1px solid transparent;
  transition: all 0.3s ease;
}

.update-post-content a:hover {
  border-bottom-color: var(--secondary-color);
  color: var(--text-color);
}

.update-post-content ul,
.update-post-content ol {
  margin-bottom: var(--spacing-8);
}

.update-post-content li {
  margin-bottom: var(--spacing-2);
}

.update-post-content strong {
  font-weight: var(--fontWeight-bold);
  color: var(--secondary-color);
}

/* Update navigation */

.update-post-nav {
  padding: var(--spacing-12) var(--spacing-0);
  border-top: 1px solid var(--border-color);
  margin-top: var(--spacing-16);
}

.update-nav-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  list-style: none;
  padding: 0;
  margin: 0;
}

.update-nav-link {
  color: var(--secondary-color);
  text-decoration: none;
  font-weight: var(--fontWeight-normal);
  font-size: var(--fontSize-0);
  letter-spacing: 0.5px;
  transition: all 0.3s ease;
}

.update-nav-link:hover {
  color: var(--text-color);
  transform: translateY(-1px);
}

/* Media queries */

@media (max-width: 42rem) {
  blockquote {
    padding: var(--spacing-0) var(--spacing-0) var(--spacing-0) var(--spacing-4);
    margin-left: var(--spacing-0);
  }
  ul,
  ol {
    list-style-position: inside;
  }
  
  .updates-header {
    padding: var(--spacing-12) var(--spacing-0) var(--spacing-8) var(--spacing-0);
    margin-bottom: var(--spacing-12);
  }
  
  .updates-page-title {
    font-size: var(--fontSize-5);
    letter-spacing: 0.15em;
  }
  
  .update-list-item {
    margin-bottom: var(--spacing-12);
    padding-bottom: var(--spacing-8);
  }
  
  .update-item-title {
    font-size: var(--fontSize-3);
  }
  
  .update-post-header {
    padding: var(--spacing-12) var(--spacing-0) var(--spacing-8) var(--spacing-0);
    margin-bottom: var(--spacing-12);
  }
  
  .update-post-title {
    font-size: var(--fontSize-5);
  }
  
  .update-nav-list {
    flex-direction: column;
    gap: var(--spacing-4);
  }
}
